{
  "title": "tombola scroll",
  "rules": [
    {
      "description": "numpad plus and enter for smart scroll (ignore caps)",
      "manipulators": [
        {
          "from": {
            "key_code": "keypad_plus",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "left_command",
                "left_option",
                "left_shift",
                "left_control"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "keypad_enter",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": [
                "left_command",
                "left_option",
                "left_shift",
                "left_control"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "keypad_0",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_command",
                "left_option",
                "left_shift",
                "left_control"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "keypad_period",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_command",
                "left_option",
                "left_shift",
                "left_control"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
